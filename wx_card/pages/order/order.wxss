/* pages/order/order.wxss */
.greybody{
  background: #f5f5f5;
  min-height: 100%;
}
.info_top{
  background: #fff;
  padding-left: 21rpx;
  margin-bottom: 20rpx;
}
.h3text{
  position: relative;
  border-bottom: 2px solid #f5f5f5;
  padding:27rpx;
}
.h3_a{
  font-size: 28rpx;
  color: #666;
}
.h3_b{
  font-size: 28rpx;
  color: #232323;
  margin-top: 12rpx;
}
.onoff{
  position: absolute;
  right: 30rpx;
  bottom: 26rpx;
  font-size: 28rpx;
  color: #fe6f0f;
  width: 210rpx;
}
.onoff::before{
  content: '';
  position: absolute;
  right: 0rpx;
  bottom: 16rpx;
  width: 24rpx;
  height: 24rpx;
  border-left: 1px solid #fe6f0f;
  border-bottom: 1px solid #fe6f0f;
  transform: rotate(-45deg);
}
.onoff.on::before{
  content: '';
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
  width: 24rpx;
  height: 24rpx;
  border-left: 1px solid #fe6f0f;
  border-bottom: 1px solid #fe6f0f;
  transform: rotate(135deg);
}
.item{
  position: relative;
  padding: 1rpx 0 1rpx 0;
  margin-left: 45rpx;
  font-size: 24rpx;
  color: #bbb;
}
.item::before{
  content: '';
  position: absolute;
  top: 40rpx;
  bottom: 10rpx;
  left: 9rpx;
  width: 2rpx;
  background: #e5e5e5;
}
.item text{
  position: relative;
  display: block;
  margin: 30rpx auto;
  padding-left: 38rpx;
}
.item text::before{
  display: block;
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 16rpx;
  height: 16rpx;
  background: #e5e5e5;
  border:2rpx solid #f4f4f4;
  border-radius: 50%;
  -webkit-border-radius: 50%;
}
.item text:nth-child(1){
  color: #232323;
}
.item text:nth-child(1)::before{
  background: #fe6f0f;
  border:2rpx solid #feb787;
}