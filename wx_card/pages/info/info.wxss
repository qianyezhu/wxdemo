.authcard{
  position: absolute;
  top: 15rpx;
  right: 24rpx;
  background: #fff;
  color: #fe6f0f;
  font-size: 28rpx;
  line-height: 28rpx;
  border: 1rpx solid #fe6f0f;
  padding: 10rpx 18rpx;
  border-radius: 24rpx;
}
.btn1{
 width: 690rpx;
 margin: 60rpx auto 0 auto;
}
.hink{
  z-index: 9999;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
}
.popup{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
  width: 568rpx;
  height: 373rpx;
  border-radius: 10rpx;
  -webkit-border-radius: 10rpx;
}
.popuphead{
  position: absolute;
  top: -123rpx;
  left: 0;
  right: 0;
  width: 200rpx;
  height: 163rpx;
  margin: 0 auto;

}
.popup text{
  display: inline-block;
  padding: 30rpx 60rpx;
  font-size: 28rpx;
  color: #232323;
  line-height: 50rpx;
}
.btn2{
 width: 490rpx;
 margin: 0 auto;
}
.close{
  position: absolute;
  top: 0;
  right: 18rpx;
  width: 25rpx;
  height: 25rpx;
}